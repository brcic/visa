                            <div class="layui-input-inline">
                                <input type="text" name="ResidencePhone" placeholder="电话" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                    </div>
                    <blockquote class="layui-elem-quote layui-text">
                        谁将承担往返的费用？
                    </blockquote>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label"></label>
                            <div class="layui-input-inline">
                                @Html.DropDownListFor(model => model.WhoCostYourExpense, ViewData["vexpense"] as List<SelectListItem>)
                            </div>
                        </div>
                    </div>
                    <blockquote class="layui-elem-quote layui-text">
                        期间有无医疗保险? 如有，请填写保险公司名称及保险账号
                    </blockquote>
                    <div class="layui-form-item">
                        <label class="layui-form-label"></label>
                        <div class="layui-input-inline" style="width:360px;">
                            @Html.TextBoxFor(model => model.InsuranceCompanyAccount, new { @class = "layui-input", @style = "text-transform:uppercase;" })
                        </div>
                    </div>

                    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                        <legend>家庭、工作或学习信息</legend>
                    </fieldset>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Home address</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.HomeAddress, new { @class = "layui-input", @style = "text-transform:uppercase;", @placeholder = "详细家庭邮政地址" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Home phone</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.HomeTelephone, new { @class = "layui-input", @style = "text-transform:uppercase;", @placeholder = "家庭电话" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Mobile phone</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.MobilePhone, new { @class = "layui-input", @style = "text-transform:uppercase;", @placeholder = "手机号码" })
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Employer or School</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.EmployerName, new { @class = "layui-input", @style = "text-transform:uppercase;", @placeholder = "工作单位或学校名称" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Mailing address</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.EmployerMail, new { @class = "layui-input", @style = "text-transform:uppercase;", @placeholder = "工作单位或学校邮箱" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Mobile phone</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.MobilePhone, new { @class = "layui-input", @style = "text-transform:uppercase;", @placeholder = "工作单位或学校手机号码" })
                            </div>
