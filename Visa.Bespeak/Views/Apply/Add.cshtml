                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Study" title="留学">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Employment" title="任职就业">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Official visit" title="官方访问">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Other" title="其他">
                            </div>
                        </div>

                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Number of entries</label>
                            <div class="layui-input-inline">
                                @Html.DropDownListFor(model => model.EntryNumber, ViewData["ventry"] as List<SelectListItem>)
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Date of entry</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.ProposedDateEntry, new { @class = "layui-input", @placeholder = "预计入境日期", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                       
                    </div>
                    <blockquote class="layui-elem-quote layui-text">
                        邀请方的信息（邀请人或邀请单位的名字、地址、电话和邮箱）
                    </blockquote>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Name</label>
                            <div class="layui-input-inline">
                                <input type="text" name="InviterName" placeholder="姓名" class="layui-input" style="text-transform:uppercase;" />
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Address</label>
                            <div class="layui-input-inline">
                                <input type="text" name="InviterAddress" placeholder="地址" class="layui-input" style="text-transform:uppercase;"/>
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Phone Number & Email</label>
                            <div class="layui-input-inline">
                                <input type="text" name="InviterPhone" placeholder="电话" class="layui-input" style="text-transform:uppercase;"/>
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Name</label>
                            <div class="layui-input-inline">
                                <input type="text" name="InviterName" placeholder="姓名" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Address</label>
                            <div class="layui-input-inline">
                                <input type="text" name="InviterAddress" placeholder="地址" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Phone Number & Email</label>
                            <div class="layui-input-inline">
                                <input type="text" name="InviterPhone" placeholder="电话" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                    </div>
                    <blockquote class="layui-elem-quote layui-text">
                        逗留期间的地点/酒店名称和电话（按时间顺序）
                    </blockquote>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Name of Place</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidencePlace" placeholder="地点名称" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Address</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidenceAddress" placeholder="地址" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Phone Number</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidencePhone" placeholder="电话" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Name of Place</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidencePlace" placeholder="地点名称" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Address</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidenceAddress" placeholder="地址" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Phone Number</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidencePhone" placeholder="电话" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Name of Place</label>
                            <div class="layui-input-inline">
                                <input type="text" name="ResidencePlace" placeholder="地点名称" class="layui-input" style="text-transform:uppercase;">
                            </div>
                        </div>
                        <div class="layui-inline">
