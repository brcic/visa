                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">ID number</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.IDNumber, new { @class = "layui-input", @placeholder = "身份证号码", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Marital Status</label>
                            <div class="layui-input-inline">
                                @Html.DropDownListFor(model => model.MaritalStatus, ViewData["vmarital"] as List<SelectListItem>)
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Contact Address</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.ContactAddress, new { @class = "layui-input", @placeholder = "联系地址", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Contact Telephone</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Telephone, new { @class = "layui-input", @placeholder = "联系电话", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">当前职业(可选多项)</label>
                            <div class="layui-input-block">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Businessman" title="商人">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Government official" title="政府官员">
