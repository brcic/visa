@model Visa.Domain.ApplyForm
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>填写申请表</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="~/js/jquery-1.10.2.js"></script>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        @Html.Partial("_PartialHeader")
        <div class="layui-body">
          
            <div class="layui-main">
                @using (Html.BeginForm("Add", "Apply", new { sqid = ViewData["vsqid"] }, FormMethod.Post, new { @id = "frmAdd", @name = "frmAdd", @role = "form", @class = "layui-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;color:red">
                        <legend>签证申请表须用大写字母填写完整(中文名除外)</legend>
                    </fieldset>
                    <blockquote class="layui-elem-quote">
                        基本信息
                    </blockquote>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Surname</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Surname, new { @Value = ViewData["vsur"], @class = "layui-input", @placeholder = "姓", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Given name(s)</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Givname, new { @Value = ViewData["vgiven"], @class = "layui-input", @placeholder = "名", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Gender</label>
                            <div class="layui-input-inline">
                                @Html.DropDownListFor(model => model.Gender, ViewData["vgender"] as List<SelectListItem>)
                            </div>
                        </div>
                    </div>

                    <div class="layui-form-item">

                        <div class="layui-inline">
                            <label class="layui-form-label">Previous name</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Prename, new { @class = "layui-input", @placeholder = "曾用名或别名", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Name in ethnic</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Chiname, new { @class = "layui-input", @placeholder = "用本国语言书写的名字" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Current Nationality</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.CNationality, new { @Value = ViewData["vnation"], @class = "layui-input", @placeholder = "现有国籍", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Former nationality</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.FNationality, new { @class = "layui-input", @placeholder = "曾有国籍", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">出生日期</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Dateofbirth, new { @class = "layui-input", @placeholder = "出生日期", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Place of birth</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.Placeofbirth, new { @class = "layui-input", @placeholder = "出生地点", @style = "text-transform:uppercase;" })
