                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Teacher" title="教师">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Religious worker" title="宗教人士">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Student" title="学生">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Active duty military personnel" title="现役军人">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Housewife" title="家庭主妇">
                                <input type="checkbox" name="checkboxOccu" lay-skin="primary" value="Retired" title="退休">
