                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Passport type</label>
                            <div class="layui-input-inline">
                                @Html.DropDownListFor(model => model.PassportType, ViewData["vpasstype"] as List<SelectListItem>)
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Passport number</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.PassportNumber, new { @Value = ViewData["vPassport"], @class = "layui-input", @placeholder = "护照号码", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">Date of issue</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.DateIssue, new { @class = "layui-input", @placeholder = "签发日期",  @readonly = "readonly"  })
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">Place of issue</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.PlaceIssue, new { @class = "layui-input", @placeholder = "签发地点", @style = "text-transform:uppercase;" })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label"> Expiry date</label>
                            <div class="layui-input-inline">
                                @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "layui-input", @placeholder = "失效日期", @readonly = "readonly"  })
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">加急服务</label>
                            <div class="layui-input-inline">
                                @Html.DropDownListFor(model => model.RushService, ViewData["vrush"] as List<SelectListItem>)
                            </div>
                        </div>
                    </div>


                    <blockquote class="layui-elem-quote">
                        旅游信息
                    </blockquote>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">赴目的国主要事由</label>
                            <div class="layui-input-block">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Tourism" title="旅游">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="As resident journalist" title="记者常驻">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Family visit" title="探亲">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="As journalist for temporary news coverage" title="记者临时采访">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Visiting friends" title="访友">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="As resident diplomat or consul" title="常驻外交、领事官员">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Business trip" title="商务">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Commercial performance" title="商业演出">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="Meeting" title="会议">
                                <input type="checkbox" name="checkboxPurpose" lay-skin="primary" value="As crew member" title="执行乘务">
