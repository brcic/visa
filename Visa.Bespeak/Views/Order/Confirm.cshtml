@model IEnumerable<Visa.Domain._AppTemp>
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>最终确认</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/global.css" media="all">
    <link rel="stylesheet" href="/css/laycustom.css" media="all">
    <script src="~/js/jquery-1.10.2.js"></script>
    <script src="~/layui/layui.js"></script>
    <script type="text/javascript">
        layui.use(['layer', 'element', 'laydate'], function () {
            var layer = layui.layer, element = layui.element, laydate = layui.laydate;
            
            window.checkqr = function ()
            {
                var layerid = layer.msg('验证中...', { icon: 16, time: 0, shade: [0.6, '#000', true] });
                var _query = window.location.href;
                var jsonObj = parseQueryString(_query);
                $.ajax({
                    type: 'POST',
                    url: '/Order/Confirm',
                    data: jsonObj,
                    dataType: 'json',
                    success: function (data) {
                        layer.close(layerid);
                        
                        window.location.href = "/Order/List";
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) { layer.close(layerid); }
                });
            }
            window.parseQueryString = function (url)
            {
                var reg_url = /^[^\?]+\?([\w\W]+)$/, reg_para = /([^&=]+)=([\w\W]*?)(&|$|#)/g,arr_url = reg_url.exec(url), ret = {};
                if (arr_url && arr_url[1]) {
                    var str_para = arr_url[1], result;
                    while ((result = reg_para.exec(str_para)) != null) {
                        ret[result[1]] = result[2];
                    }
                }
                return ret;
            }
        });

    </script>
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        @Html.Partial("_PartialHeader")
        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div style="padding: 10px;">
                <h2 class="projecttitle">预约确认</h2>
                <span class="layui-breadcrumb" > <a>预约</a><a href="/Order/Place">地点</a>  <a href="/Order/Applicant">申请人列表</a> <a href="/Order/Appointment">预约</a> <a><cite>预约确认</cite></a> </span>
                <p style="text-align:right;"><b>预约序号：@ViewData["vyyxh"]</b></p>
                @Html.Raw(ViewData["vtip"]) 
                <div class="layui-table-body layui-table-main">
                    <table class="layui-table">
                        <colgroup>
                            <col width="150">
                            <col width="200">
                            <col>
                        </colgroup>
                        <thead>
                            <tr>
                                <th>名</th>
                                <th>姓</th>
                                <th>电话号码</th>
                                <th>护照号码</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="tr_@item.Id">
                                    <td>@item.Surname</td>
                                    <td>@item.Givename</td>
                                    <td>@item.Cellphone</td>
                                    <td>@item.Passport</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <p>请记录并保存预约序号 <span>@ViewData["vyyxh"]</span> 以便后续使用</p>
                <br>

                <label><input type="checkbox" name="write"  value="1" checked="checked"><span style="margin-left: 10px;">是的，我愿意接收签证申请中心发送的关于可选增值服务的通讯内容</span></label>

                <br>
                <a href="javascript:checkqr()" class="layui-btn layui-btn-big" style="margin-top: 20px;">提交</a>
            </div>
        </div>
        @Html.Partial("_PartialFooter")
    </div>
    
    
</body>
</html>
