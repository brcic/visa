@model Visa.Domain.HowToApply
@{
    Layout = null;
}
@{
    string regionName = ViewContext.RouteData.Values["region"].ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" id="myViewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=8; IE=9; IE=10; IE=EDGE" />
    <meta name="description" content="如何申请">
    <meta name="keywords" content="如何申请">
    <title>签证信息 - 青岛 - 如何申请</title>
    
    @Html.Partial("_PartialCss")

</head>
<body>
    <div class="container">
        @Html.Partial("_PartialHeader")
        <section class="banner">
            <div class="wrapper">
                <div class="breadcrumb padt20">
                    <ul class="clearfix">
                        <li><a href="/@regionName/Home">首页</a></li>
                        <li>&gt;</li>
                        <li><a href="/@regionName/Step/How_To_Apply">如何申请</a></li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="center text_center padt25">
                    <h1 class="caps c_blue light fbold">如何申请</h1>
                </div>
            </div>
        </section>
        <div class="wrapper">
            <section class="steps">
                <ul class="step_icons">
                    <li class="step01 ico marr94"><a href="/@regionName/Step/Know_Your_Visa_Type" title="准备您的申请"></a></li>
                    <li class="step02 ico marr94"><a href="/@regionName/Step/How_To_Apply" class="ico_active" title="如何申请"></a></li>
                    <li class="step03 ico"><a href="/@regionName/Step/After_Submission" title="完成递交"></a></li>
                    <li class="clear ico"></li>
                </ul>
            </section>
            <!--Responsive-->
            <div class="home_step_responsive_parent">
                <div class="home_step_responsive">
                    <div class="step01 ico"><a href="/@regionName/Step/Know_Your_Visa_Type" title="准备您的申请"></a></div>
                </div>
                <div class="home_step_responsive">
                    <div class="step02 ico"><a href="/@regionName/Step/How_To_Apply" class="ico_active" title="如何申请"></a></div>
                </div>
                <div class="home_step_responsive">
                    <div class="step03 ico"><a href="/@regionName/Step/After_Submission" title="完成递交"></a></div>
                </div>
            </div>
        </div>
        <section>
            <section class="content">
                <div class="wrapper">
                    <h4 class="tourist_title_main marb15 mart20 caps">如何申请</h4>
                </div>
                <div class="content_nav">
                    <div class="wrapper">
                        <ul class="nav_visatypes">
                            <li><a href="#" name="temporary_overview">在中心递交申请</a></li>
                            <li><a href="#" name="temporary_visaFees">邮寄递交申请</a></li>
                            <li><a href="#" name="temporary_documents">护照递送服务</a></li>

                        </ul>
                        <div class="nav_visatypes_select">
                            <select class="">
                                <option value="temporary_overview">在中心递交申请</option>
                                <option value="temporary_visaFees">邮寄递交申请</option>
                                <option value="temporary_documents">护照递送服务</option>

                            </select>
                        </div>
                    </div>
                </div>
                <div class="wrapper">
                    <div class="tourist_content" id="temporary_overview">
                        <h4 class="tourist_title_main marb15 caps">在中心递交申请</h4>
                        <div class="tourist_text">
                          @Html.Raw(Model.SubmitInPerson)
                        </div>

                    </div>
                    <div class="tourist_content" id="temporary_visaFees">
                        <h4 class="tourist_title_main marb15 caps">邮寄递交申请</h4>
                        <div class="tourist_text">
                            @Html.Raw(Model.MailYourApplication)
                        </div>

                    </div>
                    <div class="tourist_content" id="temporary_documents">
                        <h4 class="tourist_title_main marb15 caps">护照递送服务</h4>
                        <div class="tourist_text">
                            @Html.Raw(Model.SubmitYourPassport)

                    </div>

                    <div class="tourist_text">
                        <a href="/@regionName/Step/Know_Your_Visa_Type" class="green_bt floatl">上一步</a>
                        <a href="/@regionName/Step/After_Submission" class="green_bt floatr">下一步</a>
                    </div>
                    <div class="clear"></div>
                    <br>
                </div>
                </div>
            </section>
        </section>
        @Html.Partial("_PartialFooter")
    </div>
</body>
</html>
