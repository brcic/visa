<div class="page-content">
    @Html.Partial("_PartialSetting")
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            @using (Html.BeginForm("Edit", "Adviser", FormMethod.Post, new { @id = "frmAdd", @name = "frmAdd", @role = "form", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                 <!-- #section:elements.form -->
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="UserName">账号</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="UserPwd">密码</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserPwd, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="UserPhone">电话</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserPhone, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="UserCountry">负责国家</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.UserCountry, ViewData["vcountry"] as List<SelectListItem>)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="Permission">权限组</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.Permission, ViewData["vperm"] as List<SelectListItem>)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="UserXm">姓名</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserXm, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="Department">部门</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Department, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="UserMark">备注</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserMark, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>


                <div class="clearfix form-actions">
                    <div class="col-md-offset-2 col-md-9">
                        <button class="btn btn-info" onclick="return checkadd()" type="submit">
                            <i class="ace-icon fa fa-check bigger-120"></i>
                            保存
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <a class="btn" href="javascript:history.go(-1)">
                            <i class="fa fa-arrow-left bigger-120"></i>
                            返回
                        </a>
                    </div>
                </div>
            }
            <div></div>
        </div>
    </div>
</div>
