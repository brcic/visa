@model Visa.Domain.SysAdmin
<script src="~/layer/layer.js"></script>
<script type="text/javascript">
    function checkadd() {
        var username = $("#UserName").val();
        if ($.trim(username) === "") {
            layer.alert("账号不能为空！", function (i) { layer.close(i); $("#UserName").focus(); });
            return false;
        }
        var userpwd = $("#UserPwd").val();
        if (userpwd == "") {
            layer.alert("密码不能为空！", function (i) { layer.close(i); $("#UserPwd").focus(); });
            return false;
        }
        var userxm = $("#UserXm").val();
        if (userxm == "") {
            layer.alert("姓名不能为空！", function (i) { layer.close(i); $("#UserXm").focus(); });
            return false;
        }

        layer.msg('正在提交...', { icon: 16, time: 0, shade: [0.6, '#000', true] });
        return true;
    }
    function isDigit(s) {
        var patrn = /^[0-9]{1,20}$/;
        if (!patrn.exec(s)) return false;
        return true;
    }
</script>
