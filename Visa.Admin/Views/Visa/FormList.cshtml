    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="/Visa/List">签证管理</a>
        </li>
        <li>
            <a href="/Visa/List?country=@ViewData["vcountry"]">@ViewData["vregion"]</a>
        </li>
        <li>
            资料表格信息
        </li>
    </ul><!-- /.breadcrumb -->
</div>
<!-- /section:basics/content.breadcrumbs -->
<div class="page-content">
    @Html.Partial("_PartialSetting")


    <div class="row">

        <div class="col-xs-12">
            <table border="0" cellspacing="0" cellpadding="0" class="table table-bordered">
                <tbody>
                    <tr>

                        <td>
                            <a class="btn btn-sm btn-pink" href="/Visa/FormAdd?vid=@ViewData["vid"]&country=@ViewData["vcountry"]">
                                <i class="fa fa-plus-square bigger-125"></i>添加材料
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <table id="simple-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>表格名称</th>
                        <th>文件名称</th>
                        <th>时间</th>
                        <th>操作</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="tr_@item.Id">
                            <td>@item.Id</td>
                            <td>@item.FileName</td>
                            <td>@item.FileValue</td>
                            <td>@item.AddTime</td>
                            <td>
                                <div class="hidden-sm hidden-xs btn-group">
                                    <a href="/Visa/FormEdit?vid=@ViewData["vid"]&pid=@item.Id&country=@ViewData["vcountry"]" class="btn btn-xs btn-info">
                                        <i class="ace-icon fa fa-pencil bigger-120"></i>编辑
                                    </a>
                                    <a href="javascript:checkdel(@item.Id)" class="btn btn-xs btn-info">
                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>删除
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
