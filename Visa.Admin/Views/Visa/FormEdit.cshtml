@model Visa.Domain.DownloadForm
<!-- 样式文件 -->
<!-- #section:basics/content.breadcrumbs -->
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
		try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="###">签证管理</a>
        </li>
        <li>
            <a href="/Visa/List">签证类别</a>
        </li>
        <li>
            <a href="/Visa/FormList?vid=@ViewData["vid"]&country=@ViewData["vcountry"]">签证资料</a>
        </li>
        <li>
            编辑上传资料
        </li>
    </ul><!-- /.breadcrumb -->

</div>
<!-- /section:basics/content.breadcrumbs -->
<div class="page-content">
    @Html.Partial("_PartialSetting")
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            @using (Html.BeginForm("FormEdit","Visa", new {  vid = ViewData["vid"], country = ViewData["vcountry"] , pid = ViewData["vpid"] }, FormMethod.Post, new { @id = "frmAdd", @name = "frmAdd", @role = "form", @class = "form-horizontal", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                 <!-- #section:elements.form -->
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="FileName">表格名</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.FileName, new { @class = "col-xs-10 col-sm-3" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="FileValue">文件</label>
                    <div class="col-sm-10">
                        <input id="File1" name="fileform" type="file" />
                        <input type="hidden" id="hiddenfile" name="hiddenfile" value="@ViewData["vfile"]" />
                        @{
                         string vfile = ViewData["vfile"].ToString();
                        }
                        @if (vfile != "")
                        {
                            <a href="/Material/@vfile" target="_blank">查看文件</a>
                        }
                    </div>
                </div>


                <div class="clearfix form-actions">
                    <div class="col-md-offset-2 col-md-9">
                        <button class="btn btn-info" type="submit">
                            <i class="ace-icon fa fa-check bigger-120"></i>
                            保存
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <a class="btn" href="javascript:history.go(-1)">
                            <i class="fa fa-arrow-left bigger-120"></i>
                            返回
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
