@model Visa.Domain.vEntry
<script src="~/layer/layer.js"></script>
<script type="text/javascript">
    function checkadd() {
        var entryName = $("#NumberEntry").val();
        if ($.trim(entryName) === "") {
            layer.alert("名称不能为空！", function (i) { layer.close(i); $("#NumberEntry").focus(); });
            return false;
        }

        var entryFee = $("#EntryFee").val();
        if (!isDigit(entryFee)) {
            layer.alert("费用必须为整数！", function (i) { layer.close(i); $("#EntryFee").focus(); });
            return false;
        }

        layer.msg('正在提交...', { icon: 16, time: 0, shade: [0.6, '#000', true] });
        return true;
    }
    function isDigit(s) {
        var patrn = /^[0-9]{1,20}$/;
        if (!patrn.exec(s)) return false;
        return true;
    }
</script>
